@using OnlineStore.Contracts.Users
@{
    ViewData["Title"] = "Роли";
}
@model List<RoleDto>

<div class="role-container">
    @foreach (var role in Model)
    {
        <div class="role-card">
            <div class="role-content">
                <h2 class="role-title">@role.Name</h2>
                <p><strong>ID:</strong> @role.Id</p>
            </div>
            <div class="role-actions">
                <form class="delete-form" asp-action="DeleteRoles" asp-controller="Roles" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту роль?');">
                    <input type="hidden" name="id" value="@role.Id" />
                    <button type="submit" class="delete-button">Удалить</button>
                </form>
            </div>
        </div>
    }
</div>

<div>

</div>

<div class="add-container">
    <div class="add-card">
        <div class="add-content">
            <h2 class="add-title">Добавить новую роль</h2>
        </div>
        <div class="add-actions">
            <form class="delete-form" asp-action="AddRoles" asp-controller="Roles" method="post">
                <input type="text" name="roleDto.Name" required />
                <button type="submit" class="add-button">Добавить</button>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    .role-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* Центрируем карточки */
        gap: 20px; /* Пробел между карточками */
    }

    .role-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 250px; /* Ширина карточки */
        transition: transform 0.3s; /* Плавный эффект при наведении */
    }

        .role-card:hover {
            transform: scale(1.05); /* Увеличение карточки при наведении */
        }

    .role-content {
        padding: 20px;
    }

    .role-title {
        margin: 0;
        font-size: 1.5em;
        color: #333;
    }

    .role-actions {
        padding: 15px;
        text-align: center; /* Централизуем кнопки */
        background-color: #f9f9f9; /* Светлый фон под кнопками */
        border-top: 1px solid #eee; /* Линия сверху */
    }

    .delete-button {
        padding: 10px 15px;
        background-color: #e74c3c; /* Цвет кнопки удаления */
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .delete-button:hover {
            background-color: #c0392b; /* Темнее при наведении */
        }



    .add-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* Центрируем карточки */
        gap: 20px; /* Пробел между карточками */
    }

    .add-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        width: 500px; /* Ширина карточки */
        transition: transform 0.3s; /* Плавный эффект при наведении */
        margin: 20px;
    }

        .add-card:hover {
            transform: scale(1.05); /* Увеличение карточки при наведении */
        }

    .add-content {
        padding: 20px;
    }

    .add-title {
        margin: 0;
        font-size: 1.5em;
        color: #333;
    }

    .add-actions {
        padding: 15px;
        text-align: center; /* Централизуем кнопки */
        background-color: #f9f9f9; /* Светлый фон под кнопками */
