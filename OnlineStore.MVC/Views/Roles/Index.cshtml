@{
    ViewBag.Title = "Управление ролями";
}

<h2 class="page-title">Управление ролями</h2>

<div class="button-container">
    <form action="@Url.Action("AddRoles", "Roles")" method="get">
        <button type="submit" class="action-button">Добавить роль</button>
    </form>

    <form action="@Url.Action("GetAllRoles", "Roles")" method="get">
        <button type="submit" class="action-button">Посмотреть все роли</button>
    </form>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f4f4; /* Цвет фона */
        color: #333; /* Цвет текста */
        padding: 20px; /* Отступы */
    }

    .page-title {
        text-align: center; /* Центрируем заголовок */
        font-size: 2em; /* Размер заголовка */
        margin-bottom: 20px; /* Отступ снизу заголовка */
    }

    .button-container {
        display: flex; /* Используем flexbox для размещения кнопок */
        justify-content: center; /* Центрация кнопок */
        gap: 20px; /* Пробел между кнопками */
    }

    .action-button {
        background-color: #007bff; /* Цвет кнопки */
        color: white; /* Цвет текста на кнопке */
        border: none; /* Без границ */
        border-radius: 5px; /* Закругление углов кнопки */
        padding: 10px 20px; /* Отступы внутри кнопки */
        font-size: 1.2em; /* Размер шрифта на кнопке */
        cursor: pointer; /* Указатель при наведении */
        transition: background-color 0.3s; /* Плавный переход цвета фона */
    }

        .action-button:hover {
            background-color: #0056b3; /* Цвет кнопки при наведении */
        }
</style>