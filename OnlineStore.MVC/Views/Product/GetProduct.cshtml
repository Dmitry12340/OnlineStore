<style>
    .product-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #fff;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        gap: 10px; /*Промежуток между элементами.*/
    }

    .product-images img {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin-right: 10px;
    }

    .product-info {
        max-width: 300px;
    }

    .btn-add-to-cart {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
    }

    .swiper-container {
        max-width: 600px; /*Ширина */
        margin: 0 auto;
    }

    .swiper-slide img {
        width: 100%;
        height: auto;
        border-radius: 5px;
    }
</style>